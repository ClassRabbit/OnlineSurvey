extends layout

block content
  .container
    case source
      when 'edit'
        h2 설문지 이어 만들기
      when 'complete'
        h2 설문 결과 보기
      when 'quest'
        h2 완성된 설문지 보기    
    .list-group
      each survey in surveys
        case source
          when 'edit'
            a.list-group-item(href='/survey/edit/#{survey._id}') #{survey.title}
          when 'complete'
            a.list-group-item(href='/survey/complete/#{survey._id}') #{survey.title}
          when 'quest'
            a.list-group-item(href='/quest/#{survey._id}') #{survey.title}  
